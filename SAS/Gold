data sganno;
   retain function 'text' x1space 'datavalue' y1space 'datapercent' 
          rotate 90 anchor "right" width 30;
   set gold;
   label=month;
   xc1=month;
   y1=-5;
   m2 = substr(month,6,2);
   if m2 in (1,2,4,5,7,8,10,11) then label='';
run;

proc sgplot data=gold sganno=sganno pad=(bottom=15%); 
series x=month y=price / markers;
xaxis display=(nolabel novalues);
run;

data gold1;
set gold;
logprice = log(price);
run;

data sganno;
   retain function 'text' x1space 'datavalue' y1space 'datapercent' 
          rotate 90 anchor "right" width 30;
   set gold1;
   label=month;
   xc1=month;
   y1=-5;
   m2 = substr(month,6,2);
   if m2 in (1,2,4,5,7,8,10,11) then label='';
run;

proc sgplot data=gold1 sganno=sganno pad=(bottom=15%); 
series x=month y=logprice / markers;
xaxis display=(nolabel novalues);
run;